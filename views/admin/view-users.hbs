<section class="mt-4">
    <div class="container">
        <table class="table table-hover mt-4">
            <thead>
                <tr>
                    <th>#</th>
                    <th>E-mail</th>
                    <th>Address</th>
                    <th>Zip</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td>1</td>
                    <td>{{this.email}}</td>
                    <td>{{this.address}}</td>
                    <td>{{this.zip}}</td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.email}}?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>