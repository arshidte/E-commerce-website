<section class="vh-100" style="background-color: rgba(126, 190, 126, 0.479)">
    <p class="h2 text-center pt-3">Login</p>
    <section class="container d-flex align-items-center bg-success rounded-2 mt-4"
        style="box-shadow: 5px 10px #a0a0a0;">
        <form class="row g-3 p-5" action="/admin/admin-login" method="post">
        {{#if invalid}}
        <div class="alert alert-danger" role="alert" data-mdb-color="danger">
         Invalid Username or Password!
        </div>
        {{/if}}
            <div class="col-md-6">
                <label for="inputEmail4" class="form-label">Email</label>
                <input type="email" class="form-control" id="inputEmail4" name="email">
            </div>
            <div class="col-md-6">
                <label for="inputPassword4" class="form-label">Password</label>
                <input type="password" class="form-control" id="inputPassword4" name="password">
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-dark">Sign in</button>
                <button type="button" class="btn btn-link text-dark" data-mdb-ripple-color="dark"><a href="/signup" style="text-decoration: none;color:black">Create a new Account</a></button>
            </div>
        </form>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</section>