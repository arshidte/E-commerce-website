<section class="mt-4">
    <div class="container">
        <div class="d-flex justify-content-end">
            <a href="/admin/logout"><button type="button" class="btn btn-danger mb-2">Logout</button></a>
        </div>
        <div class="d-flex justify-content-end">
            <a href="/admin/add-product"><button type="button" class="btn btn-success">Add Product</button></a>
        </div>
        <table class="table table-hover mt-4">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>1</td>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img src="/product-images/{{this._id}}.jpg" style="height: 4rem; width: auto;"></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.name}}?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>