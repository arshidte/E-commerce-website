<div class="container mt-5">
    <div class="row">
        {{#each products}}
        <div class="col-md-3 mt-5">
            <div class="card h-100">
                <img class="mx-auto d-block" style="width: auto;height: 9rem;" src="/product-images/{{this._id}}.jpg" class="card-img-top"
                    alt="Fissure in Sandstone" />
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">
                        {{this.description}}
                    </p>
                    <a href="#!" class="btn btn-primary">Buy Now</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>